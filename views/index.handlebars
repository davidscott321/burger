<div class="row">
  <div class="col-md-5">
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <form action="api/devour/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control whiteBackground">{{id}}. {{burger_name}}</li>
              <span class="input-group-btn">
                <button class="btn btn-secondary" type="submit">Devour it!</button>
              </span>
            </div>
          </form>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-2">

  </div>
  <div class="col-md-5">
    {{#each burgers}}
      {{#if devoured}}
        <div class="input-group whiteBackground">
          <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
        </div>
      {{/if}}
    {{/each}}
  </div>
</div>